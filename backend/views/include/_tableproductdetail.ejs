<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../include/_menu') %>
      <!-- Layout container -->
      <div class="layout-page">
        <%- include('../include/_navbar') %>
        <div class="content-wrapper">
          <!-- Content -->

          <div class="container-xxl flex-grow-1 container-p-y">
            
            <!-- Basic Bootstrap Table -->
            <div class="card">
              <h5 class="card-header">List product detail</h5>
              <div class="table-responsive text-nowrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Number</th>
                      <th>Product name</th>
                      <th>Image</th>
                      <th>Price</th>
                      <th>Color</th>
                      <th>Sale</th>
                      <th>New</th>
                      <th>Material</th>
                   
                      <th>Gender</th>
                      <th>Category</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% const formatter = new Intl.NumberFormat('en-US', {
                      style: 'currency',
                      currency: 'VND',
                    })
                     for(var i = 0; i < productDetails.length; i++) { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i>
                        <strong><%= productDetails[i].product.name %></strong>
                      </td>
                     
                      <td>
                        <ul
                          class="list-unstyled users-list m-0 avatar-group d-flex align-items-center"
                        >
                        
                        <% productDetails[i].productImage.split(",").forEach(image => { %>
                          
                          <li
                            data-bs-toggle="tooltip"
                            data-popup="tooltip-custom"
                            data-bs-placement="top"
                            class="avatar avatar-xs pull-up"
                            title="<%= productDetails[i].product.name %>"
                          >
                          <a href= <%= image %>>
                            <img
                              src=<%= image %>
                              alt="Avatar"
                              class="rounded-circle"
                            />
                          </a>
                          </li>
                      <% }); %>
                        
                        
                        </ul>
                      </td>
                      
                      <td><%= formatter.format(productDetails[i].price) %></td>
                      <td><%= productDetails[i].color %></td>
                      <td><%= productDetails[i].sale %> %</td>
                      <td><%= productDetails[i].new?"New":"Not new" %></td>
                      <td><%= productDetails[i].material %></td>
         
                      <td><%= productDetails[i].gender?"Male":"Female" %></td>
                      <td><%= productDetails[i].product.category.name %></td>
                      <td>
                        <a class="dropdown-item updateproductdetail" href="/update-product-detail?id=<%= productDetails[i]._id%>"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a
                        >
                        <a class="dropdown-item deleteproductdetail" data-id=<%= productDetails[i]._id%>
                          ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- / Content -->
     