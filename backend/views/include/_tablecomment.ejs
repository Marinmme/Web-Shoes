<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../include/_menu') %>
      <!-- Layout container -->
      <div class="layout-page">
        <%- include('../include/_navbar') %>
        <div class="content-wrapper">
          <!-- Content -->

          <div class="container-xxl flex-grow-1 container-p-y">
            
            <!-- Basic Bootstrap Table -->
            <div class="card">
              <h5 class="card-header">List comment</h5>
              <div class="table-responsive text-nowrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Number</th>
                      <th>User</th>
                      <th>comment</th>               
                      <th>Number of stars</th>
                      <th>Day</th>
                      <th>Product</th>
                      <th>Image</th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% for(var i = 0; i < comments.length; i++) { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i>
                        <strong><%= comments[i].user.name %></strong>
                      </td>

                      <td><%= comments[i].text %></td>
                      
                      <td><%= comments[i].star %></td>

                      <td><%= comments[i].createdAt %></td>

                      <td><%= comments[i].productDetail.product.name %> - <%= comments[i].productDetail.color%></td>

                      <td>
                        <ul
                          class="list-unstyled users-list m-0 avatar-group d-flex align-items-center"
                        >                
                          <li
                            data-bs-toggle="tooltip"
                            data-popup="tooltip-custom"
                            data-bs-placement="top"
                            class="avatar avatar-xs pull-up"
                            title="<%= comments[i].productDetail.product.name %>"
                          >
                          <a href= <%= comments[i].productDetail.productImage.split(",")[0] %>>
                            <img
                              src=<%= comments[i].productDetail.productImage.split(",")[0] %>
                              alt="Avatar"
                              class="rounded-circle"
                            />
                          </a>
                          </li>          
                        </ul>
                      </td>

                      <td>
                       
                        <a class="dropdown-item deletecomment" data-id=<%= comments[i]._id%>
                          ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- / Content -->
     