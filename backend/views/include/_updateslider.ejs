<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <%- include('../include/_menu') %>
        
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
            

              <!-- Basic Layout -->
              <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Update slider</h5>
                     
                    </div>
                    <div class="card-body">
                      <form method="POST" action="/api/sliders/updateSlider" id="update_slider" enctype="multipart/form-data">
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Title</label>
                          <input type="hidden" name="sliderId" value="<%= slider._id %>">
                          <input type="text" class="form-control" name="title" value="<%= slider.title %>"/>
                        </div>

                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Description</label>
                          <input type="text" class="form-control" name="description" value="<%= slider.description %>"/>
                        </div>

                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Background color</label>
                          <input type="text" class="form-control" name="background" value="<%= slider.background %>"/>
                        </div>
                        
                        <div class="mb-3">
                          <label for="formFile" class="form-label">Image</label>
                          <input class="form-control" type="file" id="inpFile" name="sliderImage" accept="image/*"/>
                          <div class="image-preview" id="imagePreview">
                          <img src="<%= slider.sliderImage %>" alt="Image Preview" class="image-preview__image">
                        <span class="image-preview__default-text">Image Preview</span>
                        </div>
                        <br>
                        
                        <button type="submit" class="btn btn-primary">Update</button>
                      </form>
                    </div>
                  </div>
                </div>
              
              </div>
            </div>
          <!-- / Content -->
        
  